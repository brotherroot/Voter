<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Launch">
<RelativeLayout   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/whole">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topic"
    />
    <EditText
        android:id="@+id/titlebox"
        android:layout_below="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintwords1"
        />
    <TextView
        android:id="@+id/describe"
        android:layout_below="@+id/titlebox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/description"
    />
     <EditText
         android:id="@+id/descriptionbox"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/describe"
         android:inputType="textMultiLine" 
         />

     <LinearLayout
        android:id="@+id/newvotes_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionbox"
        android:orientation="vertical"
        >
        <EditText
             android:id="@+id/de_vote_option_1"
             android:layout_width="match_parent"
        	 android:layout_height="wrap_content"
        	 android:hint="@string/option1"
            />
    </LinearLayout>
    <Button
        android:id="@+id/add_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/additionmark"
        android:layout_below="@+id/newvotes_layout"
       />
     <TextView
        android:id="@+id/choice"
        android:layout_below="@+id/add_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/optionwords"
    />
	 <RadioGroup android:id="@+id/sel1"
	     android:orientation="horizontal"
	     android:layout_gravity="center_horizontal"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_below="@+id/choice">
	 <RadioButton 
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:id="@+id/sing"
	     android:text="@string/single"
	     />   
	  <RadioButton 
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:id="@+id/multi"
	     android:text="@string/multiply"
	     />  
     </RadioGroup>	 
    <TextView
        android:id="@+id/right"
        android:layout_below="@+id/sel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rightset"
    />

 <RadioGroup
     android:id="@+id/sel2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/right"
     android:layout_below="@+id/right"
     android:layout_marginTop="14dp"
     android:orientation="horizontal" >

     <RadioButton
         android:id="@+id/pub"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/yes" />
     <RadioButton
      android:id="@+id/self"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/no" />
  </RadioGroup>
  <TextView
        android:id="@+id/timerequest"
        android:layout_below="@+id/sel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timesetting"
    />
	<EditText
             android:id="@+id/timestop"
             android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"
        	 android:layout_below="@+id/timerequest"
        	 android:hint="@string/timelimit"
            />
	<TextView
        android:id="@+id/launcher"
        android:layout_below="@+id/timestop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launchername"
    />
    <EditText
             android:id="@+id/addid"
             android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"
        	 android:layout_below="@+id/launcher"
        	 android:hint="@string/launcherid"
            />
    <Button
        android:id="@+id/launchdef"
        android:layout_below="@+id/addid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launchdefinition"
    />
    </RelativeLayout>
 </ScrollView>
